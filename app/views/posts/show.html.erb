<div class="row">
  <div class="col-md-8 well">
    <h3><%= @post.title %></h3>
    <p>
      <%= @post.content %>
    </p>
    <br>
  </div>
</div>

<% @post.comments.each do |comment| %>
  <div class="row">
    <div class='col-md-1 well text-center'>
    </div>

    <div class="col-md-6 well">
      <p>
        <%= comment.content %>
      </p>
      <br>
    </div>
  </div>
<% end %>